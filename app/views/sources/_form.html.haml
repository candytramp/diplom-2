= form_for @source do |f|
  .row
    .col-md-4
      .form-group
        = f.label :funding_source
        = f.text_area :funding_source, class: 'form-control'
        = f.error_messages_for(:funding_source)
  .form-actions
    = f.submit nil, class: 'btn btn-primary'
  - content_for :error_messages do
    = error_messages_for @source
