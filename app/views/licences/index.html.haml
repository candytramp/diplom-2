  - @licences.each do |licence|
    %tr
      %td= licence.number
      %td= licence.reg_date
      %td= licence.type
      %td= licence.name
      %td= licence.expiration_date
      %td= licence.req_number
      %td= licence.req_author
      %td= licence.req_object
      %td= licence.req_status
      %td= licence.req_agency
      %td= licence.req_priority
