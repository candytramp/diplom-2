.page-header
  %h1 
    Роль: 
    = @role.name
    = link_to(edit_role_path(@role), {:class => 'btn btn-primary btn-outline btn-circle'}) do
      %i.fa.fa-pencil-square-o
    = link_to(@role, :method => :delete, :data => {:confirm => 'Действительно удалить?' }, :class => 'btn btn-primary btn-outline btn-circle') do
      %i.fa.fa-times

  %ol.breadcrumb
    %li
      Администрирование
    %li= link_to(Role.models_human_name, roles_path)
    %li.active
      = @role.human

.box
  .row
    .col-md-2
      = Role.human_attribute_name(:name)
    .col-md-2
      = @role.name
  .row
    .col-md-2
      = Role.human_attribute_name(:info)
    .col-md-2
      = @role.info
