= form_for @textbook do |f|
  - if @textbook.errors.any?
    #error_explanation
      %h2= "#{pluralize(@textbook.errors.count, "error")} prohibited this textbook from being saved:"
      %ul
        - @textbook.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :isbn
    = f.text_field :isbn
  .field
    = f.label :title
    = f.text_area :title
  .field
    = f.label :publisher
    = f.text_area :publisher
  .field
    = f.label :grif
    = f.text_area :grif
  .field
    = f.label :publish_year
    = f.number_field :publish_year
  .field
    = f.label :pages
    = f.text_field :pages
  .field
    = f.label :textbook_type
    = f.text_area :textbook_type
  .actions
    = f.submit 'Save'
