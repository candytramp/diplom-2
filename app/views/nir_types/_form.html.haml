= form_for @nir_type do |f|
  - if @nir_type.errors.any?
    #error_explanation
      %h2= "#{pluralize(@nir_type.errors.count, "error")} prohibited this nir_type from being saved:"
      %ul
        - @nir_type.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .actions
    = f.submit 'Save'
