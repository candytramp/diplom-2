= form_for @exhibition do |f|
  - if @exhibition.errors.any?
    #error_explanation
      %h2= "#{pluralize(@exhibition.errors.count, "error")} prohibited this exhibition from being saved:"
      %ul
        - @exhibition.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_area :name
  .field
    = f.label :etype
    = f.text_area :etype
  .field
    = f.label :country
    = f.text_area :country
  .field
    = f.label :city
    = f.text_area :city
  .field
    = f.label :start
    = f.date_select :start
  .field
    = f.label :finish
    = f.date_select :finish
  .field
    = f.label :year
    = f.number_field :year
  .field
    = f.label :creator_login
    = f.text_field :creator_login
  .field
    = f.label :creator_data
    = f.text_area :creator_data
  .actions
    = f.submit 'Save'
