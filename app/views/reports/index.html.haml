%h1 Listing reports

%table
  %tr
    %th Title
    %th Conference
    %th Creator login
    %th Creator data
    %th
    %th
    %th

  - @reports.each do |report|
    %tr
      %td= report.title
      %td= report.conference
      %td= report.creator_login
      %td= report.creator_data
      %td= link_to 'Show', report
      %td= link_to 'Edit', edit_report_path(report)
      %td= link_to 'Destroy', report, :method => :delete, :data => { :confirm => 'Are you sure?' }

