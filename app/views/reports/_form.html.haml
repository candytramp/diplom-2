= form_for @report do |f|
  - if @report.errors.any?
    #error_explanation
      %h2= "#{pluralize(@report.errors.count, "error")} prohibited this report from being saved:"
      %ul
        - @report.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_area :title
  .field
    = f.label :conference
    = f.text_field :conference
  .field
    = f.label :creator_login
    = f.text_field :creator_login
  .field
    = f.label :creator_data
    = f.text_area :creator_data
  .actions
    = f.submit 'Save'
