  - @article_authors.each do |article_author|
    %tr
      %td= article_author.article.name
      %td= article_author.person.full_name
      %td= article_author.old_lastname
      %td= article_author.is_teacher
      %td= article_author.is_staffteacher
      %td= article_author.is_student
      %td= article_author.is_postgrad
      %td= article_author.details
      %td= link_to 'Show', article_author
      %td= link_to 'Edit', edit_article_author_path(article_author)
      %td= link_to 'Destroy', article_author, :method => :delete, :data => { :confirm => 'Are you sure?' }

