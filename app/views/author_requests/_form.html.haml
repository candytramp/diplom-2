= form_for @author_request do |f|
  - if @author_request.errors.any?
    #error_explanation
      %h2= "#{pluralize(@author_request.errors.count, "error")} prohibited this author_request from being saved:"
      %ul
        - @author_request.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :ois_request
    = f.text_field :ois_request
  .field
    = f.label :person
    = f.text_field :person
  .field
    = f.label :old_lastname
    = f.text_field :old_lastname
  .field
    = f.label :is_teacher
    = f.check_box :is_teacher
  .field
    = f.label :is_staffteacher
    = f.check_box :is_staffteacher
  .field
    = f.label :is_student
    = f.check_box :is_student
  .field
    = f.label :is_postgrad
    = f.check_box :is_postgrad
  .field
    = f.label :details
    = f.text_area :details
  .actions
    = f.submit 'Save'
