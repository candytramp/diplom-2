.page-header
  %h1 
    Конференция: 
    = @conference.name
    = link_to(edit_conference_path(@conference), {:class => 'btn btn-primary btn-outline btn-circle'}) do
      %i.fa.fa-pencil-square-o
    = link_to(@conference, :method => :delete, :data => {:confirm => 'Действительно удалить?' }, :class => 'btn btn-primary btn-outline btn-circle') do
      %i.fa.fa-times

  %ol.breadcrumb
    %li
      Редактирование
    %li= link_to(Conference.models_human_name, conferences_path)
    %li.active
      = @conference.human

%p
  %b Название:
  = @conference.name
%p
  %b Страна:
  = @conference.country
%p
  %b Город:
  = @conference.city
%p
  %b Дата начала:
  = l(@conference.start)
%p
  %b Дата окончания:
  = l(@conference.finish)
%p
  %b Год:
  = @conference.year
%p
  %b Тип:
  = @conference.ctype
%p
  %b Creator login:
  = @conference.creator_login
%p
  %b Creator data:
  = @conference.creator_data



