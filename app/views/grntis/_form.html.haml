= form_for @grnti do |f|
  - if @grnti.errors.any?
    #error_explanation
      %h2= "#{pluralize(@grnti.errors.count, "error")} prohibited this grnti from being saved:"
      %ul
        - @grnti.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_area :name
  .field
    = f.label :grnti
    = f.text_field :grnti
  .actions
    = f.submit 'Save'
